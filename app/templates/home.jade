html(lang="nl")
    head
        title Uber redundant mailing coding interview
        link(rel="stylesheet", href="/static/css/bootstrap.min.css")

    body
        div#container.container
            h1 Uber redundant mailing coding interview

            for category, message in get_flashed_messages(with_categories=true)
                div.alert(class=("alert-" + category), role="alert")= message

            div.row
                div.col-md-6
                    form(action=url_for("send_mail"), method="POST")
                        div.form-group
                            label(for="to-email-input") Email address
                            input#to-email-input.form-control(type="email", name="to_email", placeholder="example@example.com")

                        div.form-group
                            label(for="subject-input") Subject
                            input#subject-input.form-control(type="text", name="subject", placeholder="Subject")

                        div.form-group
                            label(for="body-input") Body
                            textarea#body-input.form-control(name="body", placeholder="Body", rows=8)
                        button.btn.btn-primary(type="submit") Send email
